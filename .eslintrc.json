{
  "extends": "formio",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreStrings": true
      }
    ],
    "max-depth": ["warn", 4],
    "max-statements": ["warn", 35],
    "no-console": "off",
    "prefer-const": "error",
    "prefer-template": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "new-cap": [
      "error",
      {
        "newIsCap": true,
        "capIsNew": true,
        "newIsCapExceptions": ["require"],
        "capIsNewExceptions": ["Resource", "ObjectId"]
      }
    ],
    "no-prototype-builtins": "warn",
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "callback-return": "warn"
  }
}
